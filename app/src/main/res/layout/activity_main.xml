<?xml version="1.0" encoding="utf-8"?>
<!-- activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/drawer_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#c0bba7"
                tools:context="com.audinarium.sequence.sequence.MainActivity" >

    <FrameLayout android:id="@+id/container"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_below="@+id/submitButton"
                 android:layout_alignParentStart="true">

    </FrameLayout>

    <Button
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:id="@+id/redoButton"
        android:background="@drawable/redobuttonclick"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/undoButton"
        android:layout_alignBottom="@+id/undoButton" />

    <Button
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:id="@+id/resetButton"
        android:background="@drawable/resetbuttonclick"
        android:layout_marginStart="20dp"
        android:layout_alignBottom="@+id/redoButton"
        android:layout_toEndOf="@+id/redoButton" />

    <Button
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:id="@+id/undoButton"
        android:background="@drawable/undobuttonclick"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:layout_width= "90dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/nextbuttonclick"
        android:id="@+id/submitButton"
        style="@style/Widget.AppCompat.ImageButton"
        android:scaleType="fitCenter"
        android:paddingTop="0dp"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>